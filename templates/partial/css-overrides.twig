{% if slmk_brand_color is defined %}
	{% set c = slmk_brand_color_rgba %}
	{% set hsl = slmk_brand_color_hsl %}
	{% set brandColor = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',1)' %}
	{% set brandColorBorder = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',0.7)' %}
	{% set brandColorHover = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',0.7)' %}
	{% set brandColorBorderHover = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',0.4)' %}

	{% set brandColor2 = 'hsl('~hsl["hue"]~','~hsl["saturation"]~'%,'~hsl["lightness"]~'%)' %}
	{% set brandColorHover2 = 'hsl('~hsl["hue"]~','~hsl["saturation"]~'%,'~hsl["cssHoverLightness"]~'%)' %}

	<style type="text/css" media="screen">
		body header #overlay-menu {
			background-color: {{ brandColor2 }};
		}
		#search-bar {
			border-bottom-color: {{ brandColor2  }};
		}
		.header-container {
			border-bottom-color: {{ brandColor2 }};
		}
		.btn-primary {
		    background-color: {{ brandColor2 }};
		    border-color: {{ brandColor2 }};
		}
		.btn-primary:hover,
		.btn-dark:hover,
		.btn-dark:active {
		    background-color: {{ brandColorHover2 }} !important;
		    border-color: {{ brandColorHover2 }} !important;
		}
		.page-item.active .page-link {
			background-color: {{ brandColorHover2 }};
		    border-color: {{ brandColorHover2 }};
		}
		a {
			color: {{ brandColor2 }};
		}
		a:hover {
			color: {{ brandColorHover2 }};
		}
		.lds-ring div {
			border-color: {{ brandColor2 }} transparent transparent transparent;
		}
	</style>
</style>
{% endif %}