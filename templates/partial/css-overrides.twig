{% if slmk_brand_color is defined %}
{% filter uglify_string %}
	{% set c = slmk_brand_color_rgba %}
	{% set hsl = slmk_brand_color_hsl %}
	{% set brandColor = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',1)' %}
	{% set brandColorBorder = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',0.7)' %}
	{% set brandColorHover = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',0.7)' %}
	{% set brandColorBorderHover = 'rgba('~c["red"]~','~c["green"]~','~c["blue"]~',0.4)' %}

	{% set brandColor2 = 'hsl('~hsl["hue"]~','~hsl["saturation"]~'%,'~hsl["lightness"]~'%)' %}
	{% set brandColorHover2 = 'hsl('~hsl["hue"]~','~hsl["saturation"]~'%,'~hsl["cssHoverLightness"]~'%)' %}
	<style type="text/css" media="screen">
		body header #overlay-menu {
			background-color: {{ brandColor2 }};
		}
		#main_navigation .search-wrapper {
			border-bottom-color: {{ brandColor2  }};
		}
		.header-container,
		#main_navigation {
			border-bottom: 3px solid {{ brandColor2 }};
		}
		.btn-primary {
		    background-color: {{ brandColor2 }};
		    border-color: {{ brandColor2 }};
		}
		.btn-primary:hover,
		.btn-dark:hover,
		.btn-dark:active,
		.btn-primary:focus,
		.btn-primary.focus,
		.btn-primary:disabled,
		.btn-primary.disabled  {
		    background-color: {{ brandColorHover2 }} !important;
		    border-color: {{ brandColorHover2 }} !important;
		}
		.page-item.active .page-link {
			background-color: {{ brandColorHover2 }};
		    border-color: {{ brandColorHover2 }};
		}
		a,
		.page-link {
			color: {{ brandColor2 }};
		}
		.nav-tabs .nav-item .active {
			color: {{ brandColor2 }};
			border-bottom: 2px solid {{ brandColor2 }};
		}
		a:hover,
		.page-link:hover {
			color: {{ brandColorHover2 }};
		}
		.lds-ring div {
			border-color: {{ brandColor2 }} transparent transparent transparent;
		}
		header .navbar .navbar-nav .nav-item .nav-link:focus,
		.section-featured-category .image .img-content h4::before {
			background-color: {{ brandColor2 }};
		}
		::-moz-selection { /* Code for Firefox */
			color: #ffffff;
		    background: {{ brandColor2 }};
		}

		::selection {
			color: #ffffff;
		    background: {{ brandColor2 }};
		}

		* {
			outline-color: {{ brandColor2 }};
		}

		.img-thumbnail-insert:hover,
		body.page-template-category .row .card:hover {
			border-color: {{ brandColor2 }} !important;
		}

		.support-sidebar li .active {
			background-color: {{ brandColor2 }} !important;
			cursor: default;
		}
	</style>
{% endfilter %}
{% endif %}
