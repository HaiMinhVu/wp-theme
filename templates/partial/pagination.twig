{% if posts.pagination.pages is not empty %}
    <nav aria-label="...">
        <ul class="pagination">
            {# Previous #}
            <li class="page-item{{ posts.pagination.prev ? '' : ' disabled'}}">
                <a href="{{ posts.pagination.prev.link }}" class="page-link"><i class="fa fa-caret-left" aria-hidden="true"></i></a>
            </li>
            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li class="page-item"><a class="page-link" href="{{ page.link }}">{{ page.title }}</a></li>
                {% else %}
                    <li class="page-item {{ page.class == 'dots' ? 'disabled' : 'active' }}">
                        <span class="page-link">
                            {{ page.title }}
                            <span class="sr-only">(current)</span>
                        </span>
                    </li>
                {% endif %}
            {% endfor %}
            {# Next #}
            <li class="page-item{{ posts.pagination.next ? '' : ' disabled'}}">
                <a href="{{ posts.pagination.next.link }}" class="page-link"><i class="fa fa-caret-right" aria-hidden="true"></i></a>
            </li>
        </ul>
    </nav>
{% endif %}
