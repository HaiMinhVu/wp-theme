<div class="card product-card ng-star-inserted item" data-nsid="{{product.nsid}}">
    <div class="image">
        <img alt="" class="img-fluid" style="width:auto" src="{{ product.remote_image_path|cdn_link(400) }}">
    </div>
    <div class="card-body text-center">
        <p class="card-title">{{ product.name }}</p>
        <p class="sub-title">{{ product.sku }}</p>
        <p class="status">
            {{ in_stock(product.in_stock) }}
        </p>
        <p class="price">{{ product.price|format_currency }}</p>
        <a href="{{ product|product_page }}" class="btn btn-primary btn-sm rounded">
            Explore <i class="fa fa-angle-right ml-2"></i>
        </a>
    </div>
</div>