<footer class="ng-trigger ng-trigger-routerTransition">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                {% for address in addresses %}
                <div class="foo-widget">
                    <h5 class="mb-4">{{ address.name }}</h5>
                    <ul class="address">
                        {% for child in address.children %}
                        <li>
                            <a href="https://maps.google.com/?q={{ child.name }}" target="_blank">
                                <i class="fa fa-map-marker"></i> {{ child.name | nl2br }}
                            </a>
                        </li>
                        {% for p in child.phone_numbers %}
                            <li>
                                <a href="tel:+{{ p.phone_number|only_numbers }}">
                                    {% if p.phone_type == 'phone' %}
                                    <i class="fa fa-phone"></i>
                                    {% else %}
                                    <i class="fa fa-fax"></i>
                                    {% endif %}
                                    {{ p.phone_number }}
                                </a>
                            </li>
                            {% endfor %}
                            {% for e in child.emails %}
                                <li>
                                    <a href="mailto:{{ e.email }}"><i class="fa fa-mail"></i>{{ e.email }}</a>
                                </li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %}
            </div>
            <div class="col-lg-6">
                <div class="foo-widget">
                    <h5 class="mb-4"> Our Products</h5>
                    <ul class="pro-list">
                        {% for category in product_categories %}
                            <li class="ng-star-inserted">
                                <a href="/category/{{ category.id }}">{{ category.label }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="foo-widget">
                    {% if has_social_links %}
                    <div class="mb-5">
                        <h5 class="mb-4">Follow us On</h5>
                        {% include 'partial/social-share.twig' %}
                    </div>
                    {% endif %}
                    {% if slmk_newsletter_html|length > 0 %}
                        {{ slmk_newsletter_html|uglify_string }}
                    {% endif %}
                </div>
            </div>
        </div>
        {% if footer_links|length > 0 %}
            <div class="row">
                <div class="col-12">
                    <ul class="footer-links">
                        {% for link in footer_links %}
                        <li class="ng-star-inserted">
                            <a href="{{ link.link }}">{{ link.name }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
        <!---->
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="mb-0">Copyright {{ slmk_site_brand }} {{ "now"|date("Y") }}. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </div>
</footer>
